<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <p class="col-4 offset-4 signupHeading">Sign Up</p>
    <div class="col-4 offset-4 signup-form">
      <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username: </label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            placeholder="Enter a username"
            required
          />
          <div class="valid-feedback">Look's Good</div>
          <div class="invalid-feedback">Username should be valid</div>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email: </label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            placeholder="Enter your email"
            required
          />
          <div class="invalid-feedback">Email should be valid</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password: </label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            placeholder="Enter your password"
            required
          />
          <div class="invalid-feedback">Enter the passsword!</div>
        </div>
        <button class="btn btn-dark signup-btn mb-1" style="margin-left: 10rem">
          Signup
        </button>
        <p style="text-align: center" class="existsAcc">
          Already have a account? <b><a href="/login">Login</a></b>
        </p>
      </form>
    </div>
  </div>
</body>
 