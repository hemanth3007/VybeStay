<% layout("/layouts/boilerplate") %>
<body>
  <div class="filters">
    <a
      href="/listings?category=Trending<%= search?'&search='+search:'' %>"
      class="filter-link <%= selectedCategory === 'Trending' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon"><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
    </a>

    <a
      href="/listings?category=Rooms<%= search ? '&search=' + search : '' %>"
      class="filter-link <%= selectedCategory === 'Rooms' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon"><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
    </a>

    <a
      href="/listings?category=Villas<%= search ? '&search=' + search : '' %>"
      class="filter-link <%= selectedCategory === 'Villas' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon"><i class="fa-solid fa-house-chimney"></i></div>
        <p>Villas</p>
      </div>
    </a>

    <a
      href="/listings?category=Iconic Cities<%= search ? '&search=' + search : '' %>"
      class="filter-link <%= selectedCategory === 'Iconic Cities' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon"><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
    </a>

    <a
      href="/listings?category=Mountains<%= search ? '&search=' + search : '' %>"
      class="filter-link <%= selectedCategory === 'Mountains' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon"><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
    </a>

    <a
      href="/listings?category=Castles<%= search ? '&search=' + search : '' %>"
      class="filter-link <%= selectedCategory === 'Castles' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon"><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
    </a>

    <a
      href="/listings?category=Amazing Pools<%= search ? '&search=' + search : '' %>"
      class="filter-link <%= selectedCategory === 'Amazing Pools' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon">
          <i class="fa-solid fa-person-swimming"></i>
        </div>
        <p>Amazing Pools</p>
      </div>
    </a>

    <a
      href="/listings?category=Camping<%= search ? '&search=' + search : '' %>"
      class="filter-link <%= selectedCategory === 'Camping' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon"><i class="fa-solid fa-tents"></i></div>
        <p>Camping</p>
      </div>
    </a>

    <a
      href="/listings?category=Farms<%= search ? '&search=' + search : '' %>"
      class="filter-link <%= selectedCategory === 'Farms' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon"><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
    </a>

    <a
      href="/listings?category=Artic<%= search ? '&search=' + search : '' %>"
      class="filter-link <%= selectedCategory === 'Artic' ? 'active-filter' : '' %>"
    >
      <div class="filter">
        <div class="filter-icon"><i class="fa-solid fa-snowflake"></i></div>
        <p>Artic</p>
      </div>
    </a>

    <a href="/listings" class="btn clear-filters-btn btn-sm"> Clear Filters </a>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(listing of listings) { %>
    <a href="/listings/<%= listing._id %> " class="listing-link">
      <div class="listing-card col card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
        />
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-info">&nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <script src="/js/taxToggle.js"></script>
</body>
