<% layout("/layouts/boilerplate") %>

<body>
  <script>
    window.mapToken = "<%= mapToken %>";
    window.listing = <%- JSON.stringify(listing) %>;
  </script>

  <div class="container mt-4">
    <!-- Title -->
    <div class="row">
      <div class="col-12 col-lg-8 mx-auto">
        <h2><%= listing.title %></h2>
      </div>
    </div>

    <!-- Image + Details -->
    <div class="row">
      <div class="listing-card col-12 col-lg-8 mx-auto">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          alt="listing_image"
        />

        <div class="card-body">
          <p>
            Owned by: <i><b><%= listing.owner.username %></b></i>
          </p>
          <p><%= listing.description %></p>
          <p>&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</p>
          <p><%= listing.location %></p>
          <p><%= listing.country %></p>
          <p>Category: <i><%= listing.category %></i></p>
        </div>

        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="btns">
          <a href="/listings/<%= listing._id %>/edit">
            <button class="btn btn-dark edit-btn">Edit</button>
          </a>

          <form
            action="/listings/<%= listing._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-dark del-btn">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Review Form -->
    <% if(currUser) { %>
    <div class="row mt-4">
      <div class="col-12 col-lg-8 mx-auto">
        <hr />
        <h4>Leave a Review</h4>

        <form
          action="/listings/<%= listing._id %>/reviews"
          method="POST"
          novalidate
          class="needs-validation"
        >
          <div class="mt-3 mb-3">
            <label for="rating" class="form-label">Ratings: </label>
            <fieldset class="starability-slot">
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="1"
                checked
              />
              <input
                type="radio"
                id="first-rate1"
                name="review[rating]"
                value="1"
              />
              <label for="first-rate1">1 star</label>
              <input
                type="radio"
                id="first-rate2"
                name="review[rating]"
                value="2"
              />
              <label for="first-rate2">2 stars</label>
              <input
                type="radio"
                id="first-rate3"
                name="review[rating]"
                value="3"
              />
              <label for="first-rate3">3 stars</label>
              <input
                type="radio"
                id="first-rate4"
                name="review[rating]"
                value="4"
              />
              <label for="first-rate4">4 stars</label>
              <input
                type="radio"
                id="first-rate5"
                name="review[rating]"
                value="5"
              />
              <label for="first-rate5">5 stars</label>
            </fieldset>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment: </label>
            <textarea
              name="review[comment]"
              class="form-control"
              id="comment"
              placeholder="Please share your experience here..."
              required
            ></textarea>
            <div class="invalid-feedback">Please add some comments.</div>
          </div>

          <button class="btn btn-outline-dark">Submit</button>
        </form>
      </div>
    </div>
    <% } %>

    <!-- Reviews -->
    <% if(listing.reviews.length > 0){ %>
    <div class="row mt-4">
      <div class="col-12 col-lg-8 mx-auto">
        <hr />
        <p><b>All Reviews</b></p>

        <div class="row g-4">
          <% for(review of listing.reviews) { %>
          <div class="col-12 col-md-6">
            <div class="card h-100 mb-3">
              <div class="card-body review-card-content">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p
                  class="starability-result card-text"
                  data-rating="<%= review.rating %>"
                ></p>
                <p class="card-text"><%= review.comment %></p>
              </div>

              <% if(currUser && currUser._id.equals(review.author._id)) { %>
              <form
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                method="POST"
                class="del-rev-btn"
              >
                <button class="btn btn-sm btn-dark mb-2 mt-2">Delete</button>
              </form>
              <% } %>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <% } %>

    <!-- Map -->
    <div class="row mt-4">
      <div class="col-12 col-lg-8 mx-auto mb-4">
        <hr />
        <h3>Where you'll be</h3>
        <div id="map"></div>
      </div>
    </div>
  </div>

  <script src="/js/map.js"></script>
</body>
